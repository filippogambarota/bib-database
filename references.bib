@ARTICLE{Persuh2018-el,
  title = {Working Memory and Consciousness: The Current State of Play},
  author = {Persuh, Marjan and LaRock, Eric and Berger, Jacob},
  journaltitle = {Frontiers in human neuroscience},
  volume = {12},
  pages = {78},
  date = {2018-03-02},
  doi = {10.3389/fnhum.2018.00078},
  abstract = {Working memory (WM), an important posit in cognitive science,
  allows one to temporarily store and manipulate information in the service of
  ongoing tasks. WM has been traditionally classified as an explicit memory
  system—that is, as operating on and maintaining only consciously perceived
  information. Recently, however, several studies have questioned this
  assumption, purporting to provide evidence for unconscious WM. In this
  article, we focus on visual working memory (VWM) and critically examine these
  studies as well as studies of unconscious perception that seem to provide
  indirect evidence for unconscious WM. Our analysis indicates that current
  evidence does not support an unconscious WM store, though we offer independent
  reasons to think that WM may operate on unconsciously perceived information. ©
  2018 Persuh, LaRock and Berger.},
  url = {http://dx.doi.org/10.3389/fnhum.2018.00078}
}

@ARTICLE{Hedger2016-in,
  title = {Are visual threats prioritized without awareness? A critical review
  and meta-analysis involving 3 behavioral paradigms and 2696 observers},
  author = {Hedger, Nicholas and Gray, Katie L H and Garner, Matthew and Adams,
  Wendy J},
  journaltitle = {Psychological bulletin},
  publisher = {American Psychological Association Inc.},
  volume = {142},
  pages = {934-968},
  date = {2016-09},
  doi = {10.1037/bul0000054},
  abstract = {Given capacity limits, only a subset of stimuli give rise to a
  conscious percept. Neurocognitive models suggest that humans have evolved
  mechanisms that operate without awareness and prioritize threatening stimuli
  over neutral stimuli in subsequent perception. In this meta-analysis, we
  review evidence for this 'standard hypothesis' emanating from 3 widely used,
  but rather different experimental paradigms that have been used to manipulate
  awareness. We found a small pooled threat-bias effect in the masked visual
  probe paradigm, a medium effect in the binocular rivalry paradigm and highly
  inconsistent effects in the breaking continuous flash suppression paradigm.
  Substantial heterogeneity was explained by the stimulus type: the only threat
  stimuli that were robustly prioritized across all 3 paradigms were fearful
  faces. Meta regression revealed that anxiety may modulate threat-biases, but
  only under specific presentation conditions. We also found that insufficiently
  rigorous awareness measures, inadequate control of response biases and low
  level confounds may undermine claims of genuine unconscious threat processing.
  Considering the data together, we suggest that uncritical acceptance of the
  standard hypothesis is premature: current behavioral evidence for
  threat-sensitive visual processing that operates without awareness is weak. ©
  2016 American Psychological Association.},
  url = {http://dx.doi.org/10.1037/bul0000054}
}

@ARTICLE{Robitaille2009-ze,
